@model IEnumerable<Reservacion>
@{
    ViewData["Title"] = " Reservaciones ";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="text-white" style="color:black;">
        </div>
        <table id="example" class="table">
            <thead>
                <tr class="text-center text-white" style="background-color: #25316D;">
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                    <th>@Html.DisplayNameFor(model => model.Correo)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaSalida)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaRegreso)</th>
                    <th>Destino</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Apellido)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Correo)
                        </td>
                         <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FechaSalida)
                        </td>
                         <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FechaRegreso)
                        </td>
                         <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Destinos.Nombre)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square" ></i></a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" ><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
                      @section Scripts{ 
    <script>
      $(document).ready(function () {
    $('#example').DataTable();
});
    </script>
}