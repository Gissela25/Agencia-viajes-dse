@model Gastos_Extra
@{
    ViewData["Title"] = "Eliminar Gastos Extra";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Confirmacion de Eliminacion de @Model.Nombre</h1>
        </p>
        <div class="row">
            <div class="col-md-10 offset-1">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                       @* <img id="ProfilePicturePreview"  class="border-info rounded-circle" style="max-width: 150px" />*@
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                          <div class="input-group mb-3">
                            <span class="text-white input-group-text" style="background-color: #25316D;" id="basic-addon1"><i class="bi bi-cash-stack"></i></span>
                        <input asp-for="Nombre" class="form-control" readonly />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
               
                    <div class="form-group vstack gap-2 col-md-5 mx-auto mt-4">
                        <form asp-action="Delete" >
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Eliminar" class="btn btn-secondary" /> 
                        </form>
                        <a class="btn btn-info" asp-action="Index"><i class="bi bi-arrow-return-left"></i></a>
                    </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
      
    </script>
}