@model Gastos_Extra
@{
    ViewData["Title"] = "Gastos Extra";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="text-center">Agregando Gastos Extra</h1>
        </p>
        <div class="row">
            <div class="col-md- offset-1">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*                    <div class="form-group text-center">
                    <img id="ProfilePicturePreview"  class="border-info rounded-circle" style="max-width: 150px" />
                    </div>*@
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <div class="input-group mb-3">
                            <span class="text-white input-group-text" style="background-color: #25316D;" id="basic-addon1"><i class="bi bi-cash-stack"></i></span>
                            <input asp-for="Nombre" class="form-control" />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group vstack gap-2 col-md-5 mx-auto mt-4">
                        <input type="submit" value="Agregar" class="btn btn-secondary float-right" />
                        <a class="btn btn-info" asp-action="Index"><i class="bi bi-arrow-return-left"></i></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
