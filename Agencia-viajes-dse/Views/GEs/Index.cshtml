@model IEnumerable<Gastos_Extra>
@{
    ViewData["Title"] = " Gastos Extra ";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="text-white" style="color:black;">
            <a asp-controller="GEs" asp-action="Create" class="btn btn-secondary"><i class="bi bi-file-earmark-plus"></i></a>
        </div>
        <table id="example" class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square" ></i></a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" ><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
                      @section Scripts{ 
    <script>
      $(document).ready(function () {
    $('#example').DataTable();
});
    </script>
}