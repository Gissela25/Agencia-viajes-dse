@using Agencia_viajes_dse.Data.Enum
@model IEnumerable<Destino>
@{
    ViewData["Title"] = "Lugares Turíscticos";
}

<div class="row">
    <div class="row">
                        <form class="form-inline my-2 my-lg-0" asp-controller="Destinos" asp-action="Filters">
                            
                            <input name="searchByPlace" type="text" placeholder="Tipo Lugar (Playa, Cerro, etc..)" />
                            <input name="searhByDestination" type="text" placeholder="Nacional / Internacional" />
                            <input type="range" id="rango" name="searhByPrice" min="10" max="2500" step="10" value="300"/>
                            <span id="money">300 USD</span>
                            <button asp-action="Filters" class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </form>
    </div>
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 305px;">
                <div class="row g-0">
                    <div class="col-md-12 mb-4">
                        <div class="card-header text-white bg-opacity-75 bg-primary">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Nombre
                                   <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id" ><i class="bi bi-pencil-square"></i></a>
                                    
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                       <center> <img src="@item.Img" width="300px" height="210px" alt="@item.Nombre">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            @*<p class="card-text"></p>
                            <p class="card-text"><b>Cinema: </b>@item.Cinema.Name</p>
                            <p class="card-text"><b>Category: </b>@item.MovieCategory</p>
                            <p class="card-text"><b>Start Date: </b>@item.StartDate.ToString("dd MMM yy")</p>
                            <p class="card-text"><b>End Date: </b>@item.EndDate.ToString("dd MMM yy")</p>
                            <p class="card-text ">
                                <b>Status: </b>
                                @if(DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate )
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                                else if(DateTime.Now > item.EndDate)
                                {
                                    <span class="bage bg-danger text-white">EXPIRED</span>
                                }
                                else
                                {
                                 <span class="bage bg-primary text-white">UPCOMING</span>

                                }
                            </p>*@
                            <p class="card-text"> <b> Precio: </b>@item.Costo_Principal $
                            @item.TDestino    
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                               
                             <a class=" btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id" ><i class="bi bi-eye-fill"></i>Show Details</a>
                             <a class="btn btn-success text-white" asp-controller="Reservaciones" asp-action="Create" asp-route-id="@item.Id"  ><i class="bi bi-cart-plus"></i> Reservar</a>    
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts{
    <script>
      $("#rango").on("change keyup paste click propertychange mousedown", function(){
    			document.getElementById("money").innerHTML= $("#rango").val();+"USD";
		});
    </script>
}

                            @await Html.PartialAsync("_CreateItem", "Destinos") 